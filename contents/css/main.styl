
body-color      = #0e0e0e
sidenav-color   = #070707
navbarColors    = (#F44336 #E91E63 #9C27B0 #673AB7 #3F51B5 #2196F3 #009688 #4CAF50)
post-width      = 70vw
accent          = #E91E63
primary         = #F44336

important-background(color)
  background color !important

@font-face
  font-family "Roboto"
  src   url('/font/roboto/Roboto-Light.woff2') format('woff2')
        url('/font/roboto/Roboto-Light.woff') format('woff')
      
@font-face
  font-family "Ubuntu-Mono"
  font-style normal
  font-weight 300
  src url(/font/ubuntu-mono/UbuntuMono-R.ttf) format('truetype');

body
  background body-color

// Better font support across browsers
*
  font-family Roboto, sans-serif
  speak none
  font-style normal
  font-weight 300
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  outline 0px none !important
  line-height 1.5

code
  word-wrap break-word

#main-content
  overflow-x hidden
  height calc(100vh - 64px)
  @media screen and (max-width 960px)
    height calc(100vh - 48px)

#sidenav
  list-style-type none
  width 80px !important
  min-width unset !important
  max-width unset !important
  z-index 60
  *
    background sidenav-color
  md-content
    height 100vh
    min-height 500px
    
    li
      max-width 64px !important

md-tooltip
  *
    border-radius 0 !important
    padding 10px !important
    *
      font-size 17px !important
      line-height 1 !important

for colorIndex in range(0, length(navbarColors) - 1)
  .tooltip{colorIndex} *
    // Stylus did not work with the !important placed here
    important-background(navbarColors[colorIndex])

a
  text-decoration none

.hr-margin
  margin-top 0

.transparent
  background rgba(0, 0, 0, 0)

.more
  float right

.opaque-tooltip *
  important-background(#000)

#main-content
  background-color body-color
  color #aaa
  #title
    font-size 3vw
    margin auto
    padding 50px
    font-weight 300 !important
    line-height 1 !important
    @media screen and (max-width 1450px)
      font-size 4vw
    @media screen and (max-width 900px)
      font-size 5vw
    @media screen and (max-width 470px)
      font-size 7vw
  #post
    box-shadow none
    width post-width
    margin auto
    font-weight 300 !important
    @media screen and (max-width 960px)
      width 80vw
    @media screen and (max-width 500px)
      width 90vw

code
code *
  font-family "Ubuntu-Mono", Consolas, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace, serif !important;

.toolbar-padding
