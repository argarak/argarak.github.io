    background body-color !important

#version
  position fixed
  bottom 0
  z-index 100
  right 0
  color #222
  margin 15px
  @media screen and (max-width 960px)
    display none
    
.inline 
  padding 0.2em !important
  display inline !important

h1, h2, h3, h4, h5
  font-weight 400 !important

.toolbarContainer
  margin-top 150px

.articleProgress
  margin-right 20px

#post md-card-content
  padding 0
  .flow-text p:first-child::first-letter
    background #070707
    padding 10px
    font-family Monospace, Serif
    margin-right 5px
    font-size 80px
    float left
    color primary

md-card-title
  padding 0 !important

#mainbody
  margin 70wv
  @media screen and (max-width 960px)
    margin 0

.slidedown
    position absolute
    top 0
    left 0
    width 100%
    height 100%     

@keyframes slideOut
  from
    transform translateX(0)
  to
    transform translateX(100%)

@keyframes slideIn
  from
    transform translate(-100%)
  to
    transform translateX(0)
        
.slidedown.ng-enter,
.slidedown.ng-leave
    -webkit-transition all 0.25s cubic-bezier(.01,.98,1,1)
    transition all 0.25s cubic-bezier(.01,.98,1,1)
    overflow hidden

.slidedown.ng-enter
    animation slideIn 0.7s ease-in-out both
    overflow hidden

.slidedown.ng-enter-active
    left unset
    overflow hidden

.slidedown.ng-leave
    animation slideOut 0.7s ease-in-out both
    overflow hidden
    
.slidedown.ng-leave-active
    left translateX(10000px)
    overflow hidden

@keyframes enlarge
  from
    opacity 0
  to
    opacity 1

@keyframes shrink
  from
    opacity 1     
  to
    opacity 0

#projectToolbar
  width auto
    
.ng-hide-add
  animation 200ms shrink cubic-bezier(.01,.98,1,1)

.ng-hide-remove
  animation 200ms enlarge cubic-bezier(.01,.98,1,1)

em
  font-style italic

.headingPermalink
  margin-left auto
  height inherit

.permalinkHeading
  display flex
  align-items center